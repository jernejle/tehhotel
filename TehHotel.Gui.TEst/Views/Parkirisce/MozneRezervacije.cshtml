@model TehHotel.Gui.Test.Models.RezervacijaPosebneStoritve
@{
    ViewBag.Title = "MozneRezervacije";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mozne rezervacije parkirišča</h2>

<form method="post" action="ShraniRezervacijoParkirisca">
    <table class="mojatabela">
        <tr>
            <th>Izberi
            </th>
            <th>#Id
            </th>
            <th>Številka
            </th>
            <th>Pokrito
            </th>
        </tr>
        @foreach (var item in ViewBag.Data)
        {
            <tr>
                <td>
                    <input type="radio" name="idStoritve" value="@item.Id" />
                </td>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Stevilka
                </td>
                <td>
                    @item.Pokrito
                </td>
            </tr>
        }
    </table>
    @Html.HiddenFor(m => m.datumOd)
    @Html.HiddenFor(m => m.datumDo)
    <input type="submit" name="submit" value="Izberi" />
</form>