@model TehHotel.Gui.Test.Models.RezervacijaPosebneStoritve

@{
    ViewBag.Title = "MozneRezervacije";
}

<h2>Mozne rezervacije sobe</h2>

* Če pride do prekrivanja datumov pri izbrani sobi, se rezervacija ne doda.

<form method="post" action="ShraniRezervacijoSobe">
    <table class="mojatabelaSoba">
        <tr>
            <th>Izberi</th>
            <th>#Id</th>
            <th>Številka</th>
            <th>#HotelId</th>
            <th>Nadstropje</th>
            <th>Št. postelj</th>
            <th>Cena</th>
            <th>Valuta</th>
            <th>Balkon</th>
            <th>Internet</th>
            <th>Televizija</th>
            <th>Hladilnik</th>
        </tr>
        @foreach (var item in ViewBag.Sobe)
        {
            <tr>
                <td>
                    <input type="radio" name="idStoritve" value="@item.IdSoba" />
                </td>
                <td>
                    @item.IdSoba
                </td>
                <td>
                    @item.Stevilka
                </td>
                <td>
                    @item.HotelId
                </td>
                <td>
                    @item.Nadstropje
                </td>
                <td>
                    @item.StPostelj
                </td>
                <td>
                    @item.Cena
                </td>
                <td>
                    @item.Valuta
                </td>
                <td>
                    @item.Balkon
                </td>
                <td>
                    @item.Internet
                </td>
                <td>
                    @item.Televizija
                </td>
                <td>
                    @item.Hladilnik
                </td>
            </tr>
        }
    </table>
    @Html.HiddenFor(m => m.datumOd, new { value = ViewBag.rezervacijaSobe.DatumOd})
    @Html.HiddenFor(m => m.datumDo, new { value = ViewBag.rezervacijaSobe.DatumDo})

    <input type="submit" name="submit" value="Izberi" />
</form>
