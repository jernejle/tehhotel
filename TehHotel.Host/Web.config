<?xml version="1.0"?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5"/>
    <customErrors mode="Off"/>
  </system.web>
  <system.serviceModel>
    <bindings>
      <customBinding>
        <binding name="secureBinding">
          <textMessageEncoding messageVersion="Soap11WSAddressing10" />
          <security defaultAlgorithmSuite="Basic128" authenticationMode="MutualCertificate"
            messageProtectionOrder="SignBeforeEncrypt" messageSecurityVersion="WSSecurity10WSTrustFebruary2005WSSecureConversationFebruary2005WSSecurityPolicy11BasicSecurityProfile10" />
          <httpTransport />
        </binding>
      </customBinding>
    </bindings>
    <services>
      <service behaviorConfiguration="DefaultBehavior" name="TehHotel.Model.StrankaRESTService">
        <endpoint address="/Stranke" behaviorConfiguration="RESTBehavior"
          binding="webHttpBinding" bindingConfiguration="" name="StrankaRESTServiceEndpoint"
          contract="TehHotel.Contracts.Service.IStrankaRESTService" />
      </service>
      <service behaviorConfiguration="DefaultBehavior" name="TehHotel.Model.ZaposleniRESTService">
        <endpoint address="/Zaposleni" behaviorConfiguration="RESTBehavior"
          binding="webHttpBinding" bindingConfiguration="" name="ZaposleniRESTServiceEndpoint"
          contract="TehHotel.Contracts.Service.IZaposleniRESTService" />
      </service>
      <service behaviorConfiguration="DefaultBehavior" name="TehHotel.Model.HotelService">
        <endpoint address="" binding="basicHttpBinding" bindingConfiguration=""
          name="HotelServiceEndpoint" contract="TehHotel.Contracts.Service.IHotelService" />
      </service>
      <service behaviorConfiguration="DefaultBehavior" name="TehHotel.Model.RezervacijaService">
        <endpoint address="" binding="basicHttpBinding" bindingConfiguration=""
          name="RezervacijaServiceEndpoint" contract="TehHotel.Contracts.Service.IRezervacijaService" />
      </service>
      <service behaviorConfiguration="DefaultBehavior" name="TehHotel.Model.StrankaService">
        <endpoint address="" binding="basicHttpBinding" bindingConfiguration=""
          name="StrankaServiceEndpoint" contract="TehHotel.Contracts.Service.IStrankaService" />
      </service>
      <service behaviorConfiguration="SecureBehavior" name="TehHotel.Model.HotelServiceSecure">
        <endpoint address="" binding="customBinding" bindingConfiguration="secureBinding"
          name="HotelServiceSecureEndpoint" contract="TehHotel.Contracts.Service.IHotelService" />
      </service>
    </services>
    <behaviors>
      <endpointBehaviors>
        <behavior name="RESTBehavior">
          <webHttp />
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="DefaultBehavior">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="false" />
        </behavior>
        <behavior name="SecureBehavior">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="false" />
          <serviceCredentials>
            <clientCertificate>
              <authentication certificateValidationMode="PeerOrChainTrust" />
            </clientCertificate>
            <serviceCertificate findValue="RPKey" x509FindType="FindBySubjectName" />
          </serviceCredentials>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <protocolMapping>
        <add binding="basicHttpsBinding" scheme="https" />
    </protocolMapping>    
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <!--
        To browse web app root directory during debugging, set the value below to true.
        Set to false before deployment to avoid disclosing web app folder information.
      -->
    <directoryBrowse enabled="true"/>
  </system.webServer>
  
